{
  "name": "<%= projectName %>",
  "version": "0.0.1",
  "description": "A website build by MMT Digital",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:dev": "node -r babel-register node_modules/.bin/webpack --config config/webpack/dev/webpack.config.dev.js",
    "build:prod": "node -r babel-register node_modules/.bin/webpack --config config/webpack/prod/webpack.config.prod.js",
    "start": "npm run build:dev",
    "lint:js": "standard \"src/**/*.js\"",
    "lint:js-fix": "standard --fix",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "prepush": "npm run lint:styles && npm run lint:js"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:mmtdigital/mmt-digital-webpack-structure.git"
  },
  "author": "MMT Digital",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators": "^6.24.1",
    "babel-plugin-transform-do-expressions": "^6.22.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.8",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-loader": "^0.5.1",
    "husky": "^0.14.3",
    "img-loader": "^2.0.0",
    "node-sass": "^4.5.3",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "postcss-loader": "^2.0.6",
    "postcss-scss": "^1.0.2",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.3",
    "standard-loader": "^6.0.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "url-loader": "^0.6.1",
    "webpack": "^3.6.0",
    "webpack-manifest-plugin": "^1.3.2",
    "webpack-merge": "^4.1.0"
  },
  "standard": {
    "globals": [
      "jest",
      "describe",
      "it",
      "expect",
      "shallow",
      "snapshot",
      "test",
      "enzyme",
      "mount",
      "after",
      "afterEach",
      "beforeEach",
      "parent"
    ],
    "ignore": [
      "node_modules/**",
      "*.test.js"
    ],
    "parser": "babel-eslint"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "src/styles/vendor/**/*.scss"
    ],
    "ignoreProperties": [
      "composes"
    ],
    "rules": {
      "max-empty-lines": 4,
      "string-quotes": "single",
      "function-url-quotes": "always",
      "color-hex-length": "long",
      "declaration-colon-newline-after": null,
      "declaration-block-no-redundant-longhand-properties": null,
      "font-family-name-quotes": null,
      "number-leading-zero": "never",
      "value-list-comma-newline-after": null,
      "max-nesting-depth": 2,
      "selector-pseudo-element-colon-notation": "single",
      "at-rule-name-space-after": null,
      "declaration-empty-line-before": null,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ]
    }
  }
}
